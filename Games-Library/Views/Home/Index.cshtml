@model List<Game>
@{
    ViewData["Title"] = "Home";
    var generos = (List<Genero>)ViewData["Gêneros"];
    string Cor(string nome)
    {
        return generos
        .Where(t => t.Nome == nome)
        .Select(t => t.Cor)
        .FirstOrDefault();
    }
}

<section class="pt-5 pb-3 text-center container">
    <div class="row">
        <div class="col mx-auto">
            <h1>Gamesdex</h1>
            <div class="group">
                <button id="btn-all" class="btn btn-md my-2 text-white bg-dark btn-filter">Ver
                    Todos
                </button>
                @foreach (var genero in generos)
                {
                    <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                        style="background-color:@genero.Cor">@genero.Nome
                    </button>
                }
                @foreach (var plataforma in plataformas)
                {
                    <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                        style="background-color:@plataforma.Cor">@plataforma.Nome
                    </button>
                }
            </div>
        </div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

            @foreach (var Game in Model)
            {
                <!-- Card Pokemon - Inicio -->
                <div class="col" onclick="window.location = '/Home/Details/@Game.ID'">
                    <div class="card shadow-sm cursor-pointer @string.Join(' ',Game.Genero) @string.Join(' ',Game.Plataformas)">
                        <img src="@Game.Imagem" class="card-img-top" width="100%" height="320" alt="@Game.Nome" />
                        <div class="card-body">
                            <p class="card-text mb-0">@Game.ID</p>
                            <h3 class="card-title">@Game.Nome</h3>

                            <div class="btn-group">
                                @foreach (var genero in Game.Genero)
                                {
                                    <a href="#" class="btn my-2 text-white bg-dark" @* retirar bg-dark para aparecer as cores *@
                                        style="background-color:@Cor(genero)"
                                        onclick="filter('@genero')">@genero</a>
                                }
                            </div>
                            <div class="btn-group">
                                @foreach (var plataforma in Game.Plataformas)
                                {
                                    <a href="#" class="btn my-2 text-white bg-dark" @* retirar bg-dark para aparecer as cores *@
                                        style="background-color:@Cor(plataforma)"
                                        onclick="filter('@plataforma')">@plataforma</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Card Pokemon - Fim -->
            }
            <div id="zeroPokemon" class="col-lg-12 text-center d-none">
                <h1 class="my-3 text-danger">Nenhum jogo Encontrado</h1>
            </div>
        </div>


    </div>
</div>